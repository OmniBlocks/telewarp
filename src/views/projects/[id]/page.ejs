<%
const safeProject = project || {};
const platform =
    safeProject.lang_id
        ? platforms.find(p => p.id === safeProject.lang_id) || platforms.tw
        : platforms.tw;
const safePlatform = platform || platforms?.tw || { accent: "#000" };
%>

<div class="project-page">
  <% if (!error) { %>
  <%
    const editLink = platform
      ? safePlatform.edit
      : null;
  %>

  <div class="project-header">
    <div class="project-title">
      <h1><%= project.name %></h1>
      <div class="project-author">
        by
        <a href="/user/<%= project.author %>">
          <%= project.author %>
        </a>
    </div>
    </div>

    <% if (safePlatform.id === 'tw' && platforms) { %>
      <div class="see-inside-dropdown">
        <button class="btn btn-primary see-inside-dropdown-toggle" type="button" id="editsee-inside-dropdown" data-bs-toggle="see-inside-dropdown" aria-expanded="false">
          See inside using...
        </button>
        <ul class="see-inside-dropdown-menu" aria-labelledby="editsee-inside-dropdown">
          <% platforms.forEach(p => { %>
            <% if (Array.isArray(p.edit) && p.edit.length === 2) { %>
              <li>
                <a class="see-inside-dropdown-item" target="_blank" href="<%= p.edit[0] %>">
                  <%= p.name %>
                </a>
              </li>
              <li>
                <a class="see-inside-dropdown-item" target="_blank" href="<%= p.edit[1] %>">
                  <%= p.name %> (mirror)
                </a>
              </li>
            <% } else { %>
              <li>
                <a class="see-inside-dropdown-item" target="_blank" href="<%= p.edit ? p.edit : '#' %>">
                  <%= p.name %>
                </a>
              </li>
            <% } %>
          <% }) %>
        </ul>
      </div>
    <% } else if (editLink) { %>
      <a
        href="<%= editLink %>"
        target="_blank"
        class="btn btn-primary"
        data-platform="<%= safePlatform.id %>"
      >
        See inside
      </a>
    <% } %>
  </div>

  <div class="project-layout">
    <div class="project-left">
      <div id="projectControlsContainer">
        <div class="projectControls">
          <button id="greenFlagBtn" class="control"><img src="/images/flag.svg" height="20"></button>
          <button id="stopBtn" class="control"><img src="/images/icon--stop-all.svg" height="20"></button>
          <div id="turboMode" class="speedIndicator" style="display: none;"><img src="/images/turbo.svg" height="18">Turbo Mode</div>
          <div id="fps" class="speedIndicator" style="display: none;">30 FPS</div>
          <div id="interpolation" class="speedIndicator" style="display: none;">Interpolation</div>
        </div>
        <button id="fullscreenBtn" class="control"><img src="/images/icon--fullscreen.svg" height="20"></button>
      </div>

      <div id="projectWrapperWrapper">
      <div id="projectWrapper">
        <div id="project"></div>
        <div id="loadingOverlay" class="overlay-base" style="background:<%= platform.accent %>">
          <div class="block-animation">
            <img src="/images/top-block.svg" class="top-block">
            <img src="/images/middle-block.svg" class="middle-block">
            <img src="/images/bottom-block.svg" class="bottom-block">
          </div>
          <h2 style="margin: 0;">Loading Project</h2>
          <p id="progressText" style="margin: 0;">Loading <%= safePlatform.name %> ...</p>
          <div id="progressContainer"><div id="progressBar"></div></div>
        </div>
        <div id="greenFlagOverlay" class="overlay-base">
          <div class="green-flag-icon-circle">
            <img src="/images/flag.svg" height="48">
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="project-right">
      <div class="description">
        <% if (project.description) { %>
          <div style="white-space: pre-wrap"><%= project.description %></div>
          <hr />
        <% } %>
        <p style="margin: 0"><strong>Made in: </strong>
          <a href="<%= safePlatform.url %>" target="_blank" style="color: <%= safePlatform.accent %>">
            <%= safePlatform.name ?? "Unknown" %>
          </a>
        </p>
      </div>
    </div>
  </div>
  <div class="buttons">
    <%
      const d = new Date(project.created_at);
      const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
      
      const yyyy = d.getFullYear();
      const monthName = months[d.getMonth()]; // No +1 needed here
      const dd = String(d.getDate()).padStart(2, '0');
      
      const humanDate = `${yyyy}-${monthName}-${dd}`; // 2025-Dec-21
    %>
    <p style="margin: 0;"><span style="display: inline-block;transform:scaleX(-1)">&copy;</span> <!-- <%-project.created_at%> --><%= humanDate %></p>
    <button id="downloadSb3" class="btn btn-primary" download="<%= safePlatform.name %>.<%= safePlatform.accept[0] %>">Download</button> <button 
    class="btn btn-secondary flag-btn" 
    data-id="<%= project.id %>"
    style="border-color: #ff4444; color: #ff4444;"
  >
    <%= project.flagged ? "Unflag" : "Flag Project" %>
  </button>
  <button 
    class="btn btn-primary delete-btn" 
    data-id="<%= project.id %>"
    style="background: #ff4444;"
  >
    Delete
  </button>
</div>
    <% } %>
</div>

<!-- Advanced Settings Modal -->
<div id="advancedSettingsModal">
  <div class="modal-wrapper">
    <div class="modal-header">Advanced Settings</div>
    <div class="modal-body">
      <label>
        Framerate:
        <input type="number" id="setFramerate" min="0" max="250" value="30" style="width: 60px;">
      </label>
      <br>
      <label>
        <input type="checkbox" id="nocompile">
        Disable compiler (not recommended)
      </label>
      <!-- Add more advanced settings here -->
    </div>
    <div class="modal-footer">
      <button id="closeAdvancedSettingsBtn" class="btn btn-primary">Close</button>
    </div>
  </div>
</div>


<!-- Restored security modal -->
<div id="securityModal">
  <div class="modal-wrapper">
    <div class="modal-header">Untrusted Extension</div>
    <div class="modal-body">
      <p>This project wants to load an extension.</p>
      <textarea readonly id="extensionCode">Loading code...</textarea>
      <label>
        <input type="checkbox" id="unsandboxCheckbox" checked>
        Run without sandbox
      </label>
      <p id="unsandboxWarning">
        This extension will run without the sandbox. This can allow it to phish for passwords, install malware, and more.
      </p>
    </div>
    <div class="modal-footer">
      <button id="cancelExtensionBtn" class="btn btn-secondary">Cancel</button>
      <button id="allowExtensionBtn" class="btn btn-primary">Continue</button>
    </div>
  </div>
</div>

<% if (!error) { %>
<script 
  src="/<%= platform && safePlatform.id === 'ob' ? 'scaffolding-ob.js' : 'scaffolding.js' %>" 
  defer
></script>
<script>
document.addEventListener("DOMContentLoaded", async () => {
  const editLink = document.getElementById("editLink");
  if (editLink) editLink.href = editLink.href.replaceAll('{url}', window.location.origin + `/api/sb3?id=<%= project.id %>`);

  if (typeof Scaffolding === "undefined") {
    console.error("Scaffolding library not loaded yet!");
    return;
  }

  const scaffolding = new Scaffolding.Scaffolding();
  scaffolding.usePackagedRuntime = true;
  scaffolding.setup();
  scaffolding.appendTo(document.getElementById('project'));
  window.vm = scaffolding.vm;

  const loadingOverlay = document.getElementById("loadingOverlay");
  const progressBar = document.getElementById("progressBar");
  const greenFlagOverlay = document.getElementById("greenFlagOverlay");
  const securityModal = document.getElementById("securityModal");
  const extensionCodeEl = document.getElementById("extensionCode");
  const unsandboxCheckbox = document.getElementById("unsandboxCheckbox");
  const unsandboxWarning = document.getElementById("unsandboxWarning");
  const progressText = document.getElementById("progressText");
  const turboMode = document.getElementById("turboMode");
  const fpsIndicator = document.getElementById("fps");
  const interpolation = document.getElementById("interpolation");
  const framerateInput = document.getElementById("setFramerate");
  const compilerInput = document.getElementById("nocompile");
  compilerInput.checked = false;
  const apiRoot = window.location.origin;
  const PROJECT_NAME = "<%= project.name.replace(/"/g, '\\"') %>";
  const PROJECT_EXT = "<%= safePlatform.accept[0].replace(/"/g, '\\"') %>";

  const storage = scaffolding.storage;
  storage.addWebStore(
    [storage.AssetType.ImageVector, storage.AssetType.ImageBitmap, storage.AssetType.Sound],
    (asset) => `${apiRoot}/api/asset?id=${asset.assetId}.${asset.dataFormat}`
  );

const projectWrapper = document.getElementById("projectWrapper");
const projectControlsContainer = document.getElementById("projectControlsContainer");
const fixedHeight = 360; // fixed height

function syncWrapperWithCanvas() {
  const canvas = document.querySelector(".sc-canvas");
  if (!canvas) return;

  let targetWidth, targetHeight;
  const aspectRatio = canvas.width / canvas.height || 4 / 3;

  // Check if height >= width or square
  if (canvas.height >= canvas.width) {
    // Fix height
    targetHeight = fixedHeight;
    targetWidth = fixedHeight * aspectRatio;
  } else {
    // Fix width, but shrink to fit screen
    const padding = 24; // account for page padding
    const maxWidth = Math.min(480, window.innerWidth - padding);

    targetWidth = maxWidth;
    targetHeight = targetWidth / aspectRatio;
  }

  // Only update if dimensions have changed
  if (
    parseFloat(projectWrapper.style.width) !== targetWidth ||
    parseFloat(projectWrapper.style.height) !== targetHeight
  ) {
    projectWrapper.style.width = targetWidth + "px";
    projectWrapper.style.height = targetHeight + "px";
    projectControlsContainer.style.width = targetWidth + "px";
    scaffolding.relayout();
  }
}

setInterval(syncWrapperWithCanvas, 100);

  unsandboxCheckbox.checked = true;
  unsandboxWarning.style.display = unsandboxCheckbox.checked ? "block" : "none";
  unsandboxCheckbox.addEventListener("change", () => {
    unsandboxWarning.style.display = unsandboxCheckbox.checked ? "block" : "none";
  });

  let isRunning = false;
  vm.on('ASSET_PROGRESS', (finished, total) => {
    const percent = total > 0 ? (finished / total) * 100 : 0;
    progressBar.style.width = `${percent}%`;
    progressText.innerText = `Downloading assets (${finished}/${total}) ...`;
  });

function updateRunningClasses() {
  document.documentElement.classList.toggle("is-running", isRunning);
  document.documentElement.classList.toggle("is-stopped", !isRunning);
}

vm.runtime.on("PROJECT_RUN_START", () => {
  isRunning = true;
  updateRunningClasses();
});

vm.runtime.on("PROJECT_RUN_STOP", () => {
  isRunning = false;
  updateRunningClasses();
});
updateRunningClasses();


  let userChosenSandboxMode = 'iframe';

  scaffolding.setExtensionSecurityManager({
    getSandboxMode: (url) =>
    url.startsWith("https://extensions.turbowarp.org/") ? 'unsandboxed' :
    url.startsWith("https://omniblocks.github.io/extensions/") ? 'unsandboxed' :
      userChosenSandboxMode,
    canLoadExtensionFromProject: async (url) => {
      if (url.startsWith("https://extensions.turbowarp.org/")) return true;
      if (url.startsWith("https://omniblocks.github.io/extensions/")) return true;

      securityModal.style.display = "flex";
      extensionCodeEl.textContent = "Loading code...";

      try {
        const res = await fetch(url);
        extensionCodeEl.textContent = await res.text();
      } catch (e) {
        extensionCodeEl.textContent = `Failed to fetch extension code: ${e}`;
      }

      return new Promise((resolve) => {
        const allowBtn = document.getElementById("allowExtensionBtn");
        const cancelBtn = document.getElementById("cancelExtensionBtn");

        function cleanup() {
          allowBtn.removeEventListener("click", onAllow);
          cancelBtn.removeEventListener("click", onCancel);
          securityModal.style.display = "none";
        }

        function onAllow() {
          userChosenSandboxMode = unsandboxCheckbox.checked ? "unsandboxed" : "iframe";
          cleanup();
          resolve(true);
        }

        function onCancel() {
          cleanup();
          resolve(false);
        }

        allowBtn.addEventListener("click", onAllow);
        cancelBtn.addEventListener("click", onCancel);
      });
    }
  });

  try {
    progressText.innerText = "Loading project data ...";
    const projectId = "<%= project.id %>";
    const res = await fetch(`${apiRoot}/api/project?id=${projectId}`);
    const projectData = await res.json();
    await scaffolding.loadProject(projectData);
    framerateInput.value = vm.runtime.frameLoop.framerate;
    speedIndicator();

    loadingOverlay.style.display = "none";
    greenFlagOverlay.style.display = "flex";
  } catch (e) {
    console.error("Failed to load project:", e);
  }

  function triggerGreenFlag() {
    if (event.shiftKey) {
      vm.setTurboMode(!vm.runtime.turboMode);
      return;
    }
    if (event.altKey) {
      vm.setFramerate(vm.runtime.frameLoop.framerate === 30 ? 60 : 30);
      return;
    }
    scaffolding.greenFlag();
    greenFlagOverlay.style.display = "none";
  }

  function speedIndicator() {
    turboMode.style.display = vm.runtime.turboMode ? 'flex' : 'none';
    interpolation.style.display = vm.runtime.interpolationEnabled ? 'flex' : 'none';
    fpsIndicator.innerText = `${vm.runtime.frameLoop.framerate} FPS`;
    framerateInput.value = vm.runtime.frameLoop.framerate;
    fpsIndicator.style.display = vm.runtime.frameLoop.framerate !== 30 ? 'flex' : 'none';
  }
  vm.on('TURBO_MODE_ON', speedIndicator);
  vm.on('TURBO_MODE_OFF', speedIndicator);
  vm.on('FRAMERATE_CHANGED', speedIndicator);
  vm.on('INTERPOLATION_CHANGED', speedIndicator);
  
  document.getElementById("downloadSb3").addEventListener("click", async () => {
    if (!window.vm) {
      alert("VM not loaded yet!");
      return;
    }

    try {
      const sb3Blob = await window.vm.saveProjectSb3();

      const safeName = (PROJECT_NAME || "project");

      const link = document.createElement("a");
      link.href = URL.createObjectURL(sb3Blob);
      link.download = safeName + PROJECT_EXT;
      document.body.appendChild(link);
      link.click();
      link.remove();

      URL.revokeObjectURL(link.href);
    } catch (e) {
      console.error("Failed to export project:", e);
      alert("Failed to download project.");
    }
  });

  greenFlagOverlay.addEventListener("click", triggerGreenFlag);
  document.getElementById("greenFlagBtn").addEventListener("click", triggerGreenFlag);
  document.getElementById("stopBtn").addEventListener("click", () => scaffolding.stopAll());
  document.getElementById("fullscreenBtn").addEventListener("click", (event) => {
    if (event.shiftKey) {
      // Show advanced settings modal
      const modal = document.getElementById("advancedSettingsModal");
      modal.style.display = "flex";
      return;
    }
    
    const wrapper = document.getElementById("projectWrapper");
    if (!document.fullscreenElement) wrapper.requestFullscreen();
    else document.exitFullscreen();
  });
  const advModal = document.getElementById("advancedSettingsModal");
  document.getElementById("closeAdvancedSettingsBtn").addEventListener("click", () => {
    advModal.style.display = "none";
  });

  const fpsCheckbox = document.getElementById("showFPS");
  framerateInput.value = 30;

  // Apply framerate immediately when changed
  framerateInput.addEventListener("input", () => {
    const fps = parseInt(framerateInput.value, 10);
    if (!isNaN(fps) && fps > 0) {
      vm.setFramerate(fps);
    }
  });
  compilerInput.addEventListener("change", () => {
      vm.runtime.compilerOptions.enabled = !compilerInput.checked;
  });
});

// Moderation Logic
async function sendModerationAction(projectId, action) {
  try {
    const res = await fetch("/api/moderation", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ projectId, action })
    });
    
    const data = await res.json();
    if (data.success) {
      // If deleted, redirect to home. If flagged, reload to show status.
      if (action === 'delete') {
        window.location.href = "/";
      } else {
        location.reload();
      }
    } else {
      alert("Moderation failed: " + (data.error || "Unknown error"));
    }
  } catch (err) {
    console.error("Moderation API error:", err);
    alert("Could not connect to moderation server.");
  }
}

// Event Listeners for Mod Buttons
document.querySelector(".flag-btn")?.addEventListener("click", function() {
  const id = this.getAttribute("data-id");
  sendModerationAction(id, "flag");
});

document.querySelector(".delete-btn")?.addEventListener("click", function() {
  const id = this.getAttribute("data-id");
  if (confirm("WARNING: Are you sure you want to permanently delete this project?")) {
    sendModerationAction(id, "delete");
  }
});

document.addEventListener("DOMContentLoaded", () => {
  // Find the single "See Inside" link for non-TW platforms
  const editLink = document.querySelector('a.btn[data-platform]:not(.see-inside-dropdown-toggle)');
  if (editLink) {
    const projectId = "<%= project.id %>"; // EJS inject project ID
    const apiRoot = window.location.origin;
    editLink.href = editLink.href.replaceAll("{url}", `${apiRoot}/api/sb3?id=${projectId}`);
  }
});
document.addEventListener("DOMContentLoaded", () => {
  const apiRoot = window.location.origin;
  const projectId = "<%= project.id %>";

  // Update all see-inside-dropdown links to replace {url} with actual SB3 URL
  document.querySelectorAll('.see-inside-dropdown-menu a').forEach(link => {
    if (link.href.includes("{url}")) {
      link.href = link.href.replace("{url}", `${apiRoot}/api/sb3?id=${projectId}`);
    }
  });

  // see-inside-dropdown toggle logic
  document.querySelectorAll('.see-inside-dropdown-toggle').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
      const parent = btn.closest('.see-inside-dropdown');
      parent.classList.toggle('open');
    });
  });

  document.addEventListener('click', () => {
    document.querySelectorAll('.see-inside-dropdown.open').forEach(drop => drop.classList.remove('open'));
  });
});
</script>
<% } %>
