    0% {
        transform: translateY(50px);
        opacity: 0;
    }

    33% {
        transform: translateY(50px);
        opacity: 0;
    }

    66% {
        transform: translateY(0px);
        opacity: 1;
    }
}

@keyframes bottom-slide-in {
    0% {
        transform: translateY(50px);
        opacity: 0;
    }

    66% {
        transform: translateY(50px);
        opacity: 0;
    }

    100% {
        transform: translateY(0px);
        opacity: 1;
    }
}

