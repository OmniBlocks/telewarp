<%
const platform =
      platforms.find(p => p.id === project.lang_id) || null;
%>
<style>
  /* ===== Layout only additions ===== */

  .project-page {
    display: flex;
    flex-direction: column;
    max-width: 900px;
    margin: 20px auto;
    border: 1px var(--black-transparent) solid;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
    overflow: hidden;
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--menu-bar-height);
    background: #2221;
    border-bottom: 1px var(--black-transparent) solid;
    padding-inline: 12px;
  }

  .project-header * {
    font-size: 1em;
    margin: 0;
  }

  .project-layout {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 16px;
    align-items: stretch;
  }

  .project-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #4441;
    padding: 10px;
    border-right: 1px var(--black-transparent) solid;
  }

  .project-right {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 12px;
    overflow-y: auto;
  }

  /* ===== Existing styles ===== */

  #projectControlsContainer {
    display: flex;
    justify-content: space-between;
    width: 480px;
    margin-bottom: 10px;
  }

  .projectControls {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  #projectWrapper {
    position: relative;
    width: 480px;
    height: 360px;
    border-radius: 8px;
    border: 1px solid var(--black-transparent);
    overflow: hidden;
  }

  #project {
    width: 100%;
    height: 100%;
  }

  .overlay-base {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #loadingOverlay {
    background-color: <%- platform.accent %>;
    color: white;
    display: flex;
    flex-direction: column;
    gap: 4px;
    z-index: 10000;
  }

  #progressContainer {
    width: 250px;
    height: 8px;
    overflow: hidden;
    border-radius: 9999em;
    background: #ffffff55;
  }

  #progressBar {
    width: 0%;
    height: 100%;
    background-color: white;
    transition: width 0.2s ease;
  }

  #greenFlagOverlay {
    z-index: 9000;
    cursor: pointer;
    background: #00000055;
  }

  .green-flag-icon-circle {
    height: 85px;
    width: 85px;
    border-radius: 50%;
    background: #ffffffa5;
    border: 3px #ffffffaa solid;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .control {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: 0;
    cursor: pointer;
  }
  .control:hover {
    background: #88f2;
    border-radius: 4px;
  }

  /* ===== Restored button styles ===== */

  .btn {
    border-radius: 6px;
    padding: 6px 12px;
    cursor: pointer;
    font-family: inherit;
  }

  .btn-secondary {
    background: #eee;
    border: 1px solid #ccc;
  }

  .btn-primary {
    background: <%- platform.accent %>;
    color: white;
    border: none;
  }

  /* ===== Restored security modal ===== */

  #securityModal {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    display: none;
    z-index: 11000;
  }

  .modal-wrapper {
    position: absolute;
    top: 5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 600px;
    max-width: 90%;
    background: #fff;
    color: #111;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.3);
    display: flex;
    flex-direction: column;
    max-height: calc(100vh - 6rem);
    overflow: hidden;
  }

  .modal-header {
    padding: 12px 16px;
    font-weight: bold;
    background: <%- platform.accent %>;
    color: white;
  }

  .modal-body {
    padding: 16px;
    overflow-y: auto;
  }

  .modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 8px;
    padding: 12px 16px;
    background: #f5f5f5;
  }

  #extensionCode {
    width: 100%;
    height: 400px;
    margin-top: 12px;
    resize: none;
    border: none;
    font-family: monospace;
    font-size: 0.8rem;
    background: #0001;
    border-radius: 6px;
    padding: 8px;
  }

  #unsandboxWarning {
    margin-top: 8px;
    padding: 8px;
    background: #ff000022;
    border: 1px solid red;
    border-radius: 4px;
  }

  #editLink {
    font-weight: bold;
    text-decoration: none;
    color: white;
    background: <%- platform.accent %>;
    padding: 8px;
    border-radius: 4px;
  }

  .description {
    white-space: pre-wrap;
  }

@keyframes top-slide-in {
    0% {
        transform: translateY(50px);
        opacity: 0;
    }

    33% {
        transform: translateY(0px);
        opacity: 1;
    }
}

@keyframes middle-slide-in {
    0% {
        transform: translateY(50px);
        opacity: 0;
    }

    33% {
        transform: translateY(50px);
        opacity: 0;
    }

    66% {
        transform: translateY(0px);
        opacity: 1;
    }
}

@keyframes bottom-slide-in {
    0% {
        transform: translateY(50px);
        opacity: 0;
    }

    66% {
        transform: translateY(50px);
        opacity: 0;
    }

    100% {
        transform: translateY(0px);
        opacity: 1;
    }
}

@keyframes top-slide-in-rtl {
    0% {
        transform: translateY(50px) scaleX(-1);
        opacity: 0;
    }

    33% {
        transform: translateY(0px) scaleX(-1);
        opacity: 1;
    }
    100% {
        transform: translateY(0px) scaleX(-1);
        opacity: 1;
    }
}

@keyframes middle-slide-in-rtl {
    0% {
        transform: translateY(50px) scaleX(-1);
        opacity: 0;
    }

    33% {
        transform: translateY(50px) scaleX(-1);
        opacity: 0;
    }

    66% {
        transform: translateY(0px) scaleX(-1);
        opacity: 1;
    }
    100% {
        transform: translateY(0px) scaleX(-1);
        opacity: 1;
    }
}

@keyframes bottom-slide-in-rtl {
    0% {
        transform: translateY(50px) scaleX(-1);
        opacity: 0;
    }

    66% {
        transform: translateY(50px) scaleX(-1);
        opacity: 0;
    }

    100% {
        transform: translateY(0px) scaleX(-1);
        opacity: 1;
    }
}

.top-block {
    animation: top-slide-in 1.5s ease infinite;
}

.middle-block {
    animation: middle-slide-in 1.5s ease infinite;
}

.bottom-block {
    animation: bottom-slide-in 1.5s ease infinite;
}

.block-animation {
    width: 125px;
    height: 150px;
    margin: 50px auto 0px;
}

.block-animation img {
    display: block;
    position: relative;
    height: 30%;
    margin-top: -4px;
}
</style>

<div class="project-page">
  <% if (!error) { %>
  <%
    const editLink = platform
      ? platform.edit
      : null;
  %>

  <div class="project-header">
    <h1><%= project.name %></h1>

    <% if (editLink) { %>
      <a
        href="<%= editLink %>"
        target="_blank"
        id="editLink"
        data-platform="<%= platform.id %>"
      >
        See inside
      </a>
    <% } %>
  </div>

  <div class="project-layout">
    <div class="project-left">
      <div id="projectControlsContainer">
        <div class="projectControls">
          <button id="greenFlagBtn" class="control"><img src="/images/flag.svg" height="20"></button>
          <button id="stopBtn" class="control"><img src="/images/icon--stop-all.svg" height="20"></button>
        </div>
        <button id="fullscreenBtn" class="control"><img src="/images/icon--fullscreen.svg" height="20"></button>
      </div>

      <div id="projectWrapper">
        <div id="project"></div>
        <div id="loadingOverlay" class="overlay-base">
          <div class="block-animation">
            <img src="/images/top-block.svg" class="top-block">
            <img src="/images/middle-block.svg" class="middle-block">
            <img src="/images/bottom-block.svg" class="bottom-block">
          </div>
          <h2 style="margin: 0;">Loading Project</h2>
          <p id="progressText" style="margin: 0;">Loading project...</p>
          <div id="progressContainer"><div id="progressBar"></div></div>
        </div>
        <div id="greenFlagOverlay" class="overlay-base">
          <div class="green-flag-icon-circle">
            <img src="/images/flag.svg" height="48">
          </div>
        </div>
      </div>
    </div>

    <div class="project-right">
      <p><strong>Platform:</strong>
        <a href="<%= platforms.find(p=>p.id===project.lang_id)?.url %>" target="_blank">
          <%= platforms.find(p=>p.id===project.lang_id)?.name ?? "Unknown" %>
        </a>
      </p>
      <% if (project.description) { %>
        <div class="description"><%= project.description %></div>
      <% } %>
    </div>
  </div>
  <% } %>
</div>

<!-- Restored security modal -->
<div id="securityModal">
  <div class="modal-wrapper">
    <div class="modal-header">Untrusted Extension</div>
    <div class="modal-body">
      <p>This project wants to load an extension.</p>
      <textarea readonly id="extensionCode">Loading code...</textarea>
      <label>
        <input type="checkbox" id="unsandboxCheckbox" checked>
        Run without sandbox
      </label>
      <p id="unsandboxWarning">
        This extension will run without the sandbox. This can allow it to phish for passwords, install malware, and more.
      </p>
    </div>
    <div class="modal-footer">
      <button id="cancelExtensionBtn" class="btn btn-secondary">Cancel</button>
      <button id="allowExtensionBtn" class="btn btn-primary">Continue</button>
    </div>
  </div>
</div>

<% if (!error) { %>
<script 
  src="/<%= platform && platform.id === 'ob' ? 'scaffolding-ob.js' : 'scaffolding.js' %>" 
  defer
></script>
<script>
document.addEventListener("DOMContentLoaded", async () => {
  const editLink = document.getElementById("editLink");
  if (editLink) editLink.href = editLink.href.replaceAll('{url}', window.location.origin + `/api/sb3?id=<%= project.id %>`);

  if (typeof Scaffolding === "undefined") {
    console.error("Scaffolding library not loaded yet!");
    return;
  }

  const scaffolding = new Scaffolding.Scaffolding();
  scaffolding.usePackagedRuntime = true;
  scaffolding.setup();
  scaffolding.appendTo(document.getElementById('project'));
  window.vm = scaffolding.vm;

  const loadingOverlay = document.getElementById("loadingOverlay");
  const progressBar = document.getElementById("progressBar");
  const greenFlagOverlay = document.getElementById("greenFlagOverlay");
  const securityModal = document.getElementById("securityModal");
  const extensionCodeEl = document.getElementById("extensionCode");
  const unsandboxCheckbox = document.getElementById("unsandboxCheckbox");
  const unsandboxWarning = document.getElementById("unsandboxWarning");
  const progressText = document.getElementById("progressText");
  const apiRoot = window.location.origin;

  const storage = scaffolding.storage;
  storage.addWebStore(
    [storage.AssetType.ImageVector, storage.AssetType.ImageBitmap, storage.AssetType.Sound],
    (asset) => `${apiRoot}/api/asset?id=${asset.assetId}.${asset.dataFormat}`
  );

  const projectWrapper = document.getElementById("projectWrapper");
  const projectControlsContainer = document.getElementById("projectControlsContainer");
  const fixedHeight = 360;

  function syncWrapperWithCanvas() {
    const canvas = document.querySelector(".sc-canvas");
    if (!canvas) return;
    const aspectRatio = canvas.width / canvas.height || 4 / 3;
    const targetWidth = fixedHeight * aspectRatio;

    if (parseFloat(projectWrapper.style.width) !== targetWidth) {
      projectWrapper.style.height = fixedHeight + "px";
      projectWrapper.style.width = targetWidth + "px";
      projectControlsContainer.style.width = targetWidth + "px";
      scaffolding.relayout();
    }
  }
  setInterval(syncWrapperWithCanvas, 100);

  unsandboxCheckbox.checked = true;
  unsandboxWarning.style.display = unsandboxCheckbox.checked ? "block" : "none";
  unsandboxCheckbox.addEventListener("change", () => {
    unsandboxWarning.style.display = unsandboxCheckbox.checked ? "block" : "none";
  });

  vm.on('ASSET_PROGRESS', (finished, total) => {
    const percent = total > 0 ? (finished / total) * 100 : 0;
    progressBar.style.width = `${percent}%`;
    progressText.innerText = `Downloading assets (${finished} / ${total})...`;
  });

  let userChosenSandboxMode = 'iframe';

  scaffolding.setExtensionSecurityManager({
    getSandboxMode: (url) => url.startsWith("https://extensions.turbowarp.org/") ? 'unsandboxed' : userChosenSandboxMode,
    canLoadExtensionFromProject: async (url) => {
      if (url.startsWith("https://extensions.turbowarp.org/")) return true;

      securityModal.style.display = "flex";
      extensionCodeEl.textContent = "Loading code...";

      try {
        const res = await fetch(url);
        extensionCodeEl.textContent = await res.text();
      } catch (e) {
        extensionCodeEl.textContent = `Failed to fetch extension code: ${e}`;
      }

      return new Promise((resolve) => {
        const allowBtn = document.getElementById("allowExtensionBtn");
        const cancelBtn = document.getElementById("cancelExtensionBtn");

        function cleanup() {
          allowBtn.removeEventListener("click", onAllow);
          cancelBtn.removeEventListener("click", onCancel);
          securityModal.style.display = "none";
        }

        function onAllow() {
          userChosenSandboxMode = unsandboxCheckbox.checked ? "unsandboxed" : "iframe";
          cleanup();
          resolve(true);
        }

        function onCancel() {
          cleanup();
          resolve(false);
        }

        allowBtn.addEventListener("click", onAllow);
        cancelBtn.addEventListener("click", onCancel);
      });
    }
  });

  try {
    const projectId = "<%= project.id %>";
    const res = await fetch(`${apiRoot}/api/project?id=${projectId}`);
    const projectData = await res.json();
    await scaffolding.loadProject(projectData);

    loadingOverlay.style.display = "none";
    greenFlagOverlay.style.display = "flex";
  } catch (e) {
    console.error("Failed to load project:", e);
  }

  function triggerGreenFlag() {
    scaffolding.greenFlag();
    greenFlagOverlay.style.display = "none";
  }

  greenFlagOverlay.addEventListener("click", triggerGreenFlag);
  document.getElementById("greenFlagBtn").addEventListener("click", triggerGreenFlag);
  document.getElementById("stopBtn").addEventListener("click", () => scaffolding.stopAll());
  document.getElementById("fullscreenBtn").addEventListener("click", () => {
    const wrapper = document.getElementById("projectWrapper");
    if (!document.fullscreenElement) wrapper.requestFullscreen();
    else document.exitFullscreen();
  });
});
</script>
<% } %>
