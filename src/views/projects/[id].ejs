<script>
document.addEventListener("DOMContentLoaded", async () => {
  const editLink = document.getElementById("editLink");
  if (editLink) editLink.href = editLink.href.replaceAll('{url}', window.location.origin + `/api/sb3?id=<%= project.id %>`);

  if (typeof Scaffolding === "undefined") {
    console.error("Scaffolding library not loaded yet!");
    return;
  }

  const scaffolding = new Scaffolding.Scaffolding();
  scaffolding.usePackagedRuntime = true;
  scaffolding.setup();
  scaffolding.appendTo(document.getElementById('project'));
  window.vm = scaffolding.vm;

  const loadingOverlay = document.getElementById("loadingOverlay");
  const progressBar = document.getElementById("progressBar");
  const greenFlagOverlay = document.getElementById("greenFlagOverlay");
  const securityModal = document.getElementById("securityModal");
  const extensionCodeEl = document.getElementById("extensionCode");
  const unsandboxCheckbox = document.getElementById("unsandboxCheckbox");
  const unsandboxWarning = document.getElementById("unsandboxWarning");
  const progressText = document.getElementById("progressText");
  const turboMode = document.getElementById("turboMode");
  const fpsIndicator = document.getElementById("fps");
  const interpolation = document.getElementById("interpolation");
  const apiRoot = window.location.origin;
  const PROJECT_NAME = "<%= project.name.replace(/"/g, '\\"') %>";
  const PROJECT_EXT = "<%= safePlatform.accept[0].replace(/"/g, '\\"') %>";

  const storage = scaffolding.storage;
  storage.addWebStore(
    [storage.AssetType.ImageVector, storage.AssetType.ImageBitmap, storage.AssetType.Sound],
    (asset) => `${apiRoot}/api/asset?id=${asset.assetId}.${asset.dataFormat}`
  );

const projectWrapper = document.getElementById("projectWrapper");
const projectControlsContainer = document.getElementById("projectControlsContainer");
const fixedHeight = 360; // fixed height

function syncWrapperWithCanvas() {
  const canvas = document.querySelector(".sc-canvas");
  if (!canvas) return;

  let targetWidth, targetHeight;
  const aspectRatio = canvas.width / canvas.height || 4 / 3;

  // Check if height >= width or square
  if (canvas.height >= canvas.width) {
    // Fix height
    targetHeight = fixedHeight;
    targetWidth = fixedHeight * aspectRatio;
  } else {
    // Fix width, but shrink to fit screen
    const padding = 24; // account for page padding
    const maxWidth = Math.min(480, window.innerWidth - padding);

    targetWidth = maxWidth;
    targetHeight = targetWidth / aspectRatio;
  }

  // Only update if dimensions have changed
  if (
    parseFloat(projectWrapper.style.width) !== targetWidth ||
    parseFloat(projectWrapper.style.height) !== targetHeight
  ) {
    projectWrapper.style.width = targetWidth + "px";
    projectWrapper.style.height = targetHeight + "px";
    projectControlsContainer.style.width = targetWidth + "px";
    scaffolding.relayout();
  }
}

setInterval(syncWrapperWithCanvas, 100);

  unsandboxCheckbox.checked = true;
  unsandboxWarning.style.display = unsandboxCheckbox.checked ? "block" : "none";
  unsandboxCheckbox.addEventListener("change", () => {
    unsandboxWarning.style.display = unsandboxCheckbox.checked ? "block" : "none";
  });

  let isRunning = false;
  vm.on('ASSET_PROGRESS', (finished, total) => {
    const percent = total > 0 ? (finished / total) * 100 : 0;
    progressBar.style.width = `${percent}%`;
    progressText.innerText = `Downloading assets (${finished}/${total}) ...`;
  });

function updateRunningClasses() {
  document.documentElement.classList.toggle("is-running", isRunning);
  document.documentElement.classList.toggle("is-stopped", !isRunning);
}

vm.runtime.on("PROJECT_RUN_START", () => {
  isRunning = true;
  updateRunningClasses();
});

vm.runtime.on("PROJECT_RUN_STOP", () => {
  isRunning = false;
  updateRunningClasses();
});
updateRunningClasses();


  let userChosenSandboxMode = 'iframe';

  scaffolding.setExtensionSecurityManager({
    getSandboxMode: (url) =>
    url.startsWith("https://extensions.turbowarp.org/") ? 'unsandboxed' :
    url.startsWith("https://omniblocks.github.io/extensions/") ? 'unsandboxed' :
      userChosenSandboxMode,
    canLoadExtensionFromProject: async (url) => {
      if (url.startsWith("https://extensions.turbowarp.org/")) return true;
      if (url.startsWith("https://omniblocks.github.io/extensions/")) return true;

      securityModal.style.display = "flex";
      extensionCodeEl.textContent = "Loading code...";

      try {
        const res = await fetch(url);
        extensionCodeEl.textContent = await res.text();
      } catch (e) {
        extensionCodeEl.textContent = `Failed to fetch extension code: ${e}`;
      }

      return new Promise((resolve) => {
        const allowBtn = document.getElementById("allowExtensionBtn");
        const cancelBtn = document.getElementById("cancelExtensionBtn");

        function cleanup() {
          allowBtn.removeEventListener("click", onAllow);
          cancelBtn.removeEventListener("click", onCancel);
          securityModal.style.display = "none";
        }

        function onAllow() {
          userChosenSandboxMode = unsandboxCheckbox.checked ? "unsandboxed" : "iframe";
          cleanup();
          resolve(true);
        }

        function onCancel() {
          cleanup();
          resolve(false);
        }

        allowBtn.addEventListener("click", onAllow);
        cancelBtn.addEventListener("click", onCancel);
      });
    }
  });

  try {
    progressText.innerText = "Loading project data ...";
    const projectId = "<%= project.id %>";
    const res = await fetch(`${apiRoot}/api/project?id=${projectId}`);
    const projectData = await res.json();
    await scaffolding.loadProject(projectData);
    speedIndicator();

    loadingOverlay.style.display = "none";
    greenFlagOverlay.style.display = "flex";
  } catch (e) {
    console.error("Failed to load project:", e);
  }

  function triggerGreenFlag() {
    if (event.shiftKey) {
      vm.setTurboMode(!vm.runtime.turboMode);
      return;
    }
    if (event.altKey) {
      vm.setFramerate(vm.runtime.frameLoop.framerate === 30 ? 60 : 30);
      return;
    }
    scaffolding.greenFlag();
    greenFlagOverlay.style.display = "none";
  }

  function speedIndicator() {
    turboMode.style.display = vm.runtime.turboMode ? 'flex' : 'none';
    interpolation.style.display = vm.runtime.interpolationEnabled ? 'flex' : 'none';
    fpsIndicator.innerText = `${vm.runtime.frameLoop.framerate} FPS`;
    fpsIndicator.style.display = vm.runtime.frameLoop.framerate !== 30 ? 'flex' : 'none';
  }
  vm.on('TURBO_MODE_ON', speedIndicator);
  vm.on('TURBO_MODE_OFF', speedIndicator);
  vm.on('FRAMERATE_CHANGED', speedIndicator);
  vm.on('INTERPOLATION_CHANGED', speedIndicator);
  
  document.getElementById("downloadSb3").addEventListener("click", async () => {
    if (!window.vm) {
      alert("VM not loaded yet!");
      return;
    }

    try {
      const sb3Blob = await window.vm.saveProjectSb3();

      const safeName = (PROJECT_NAME || "project");

      const link = document.createElement("a");
      link.href = URL.createObjectURL(sb3Blob);
      link.download = safeName + PROJECT_EXT;
      document.body.appendChild(link);
      link.click();
      link.remove();

      URL.revokeObjectURL(link.href);
    } catch (e) {
      console.error("Failed to export project:", e);
      alert("Failed to download project.");
    }
  });

  greenFlagOverlay.addEventListener("click", triggerGreenFlag);
  document.getElementById("greenFlagBtn").addEventListener("click", triggerGreenFlag);
  document.getElementById("stopBtn").addEventListener("click", () => scaffolding.stopAll());
  document.getElementById("fullscreenBtn").addEventListener("click", () => {
    const wrapper = document.getElementById("projectWrapper");
    if (!document.fullscreenElement) wrapper.requestFullscreen();
    else document.exitFullscreen();
  });
});

// Moderation Logic
async function sendModerationAction(projectId, action) {
  try {
    const res = await fetch("/api/moderation", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ projectId, action })
    });
    
    const data = await res.json();
    if (data.success) {
      // If deleted, redirect to home. If flagged, reload to show status.
      if (action === 'delete') {
        window.location.href = "/";
      } else {
        location.reload();
      }
    } else {
      alert("Moderation failed: " + (data.error || "Unknown error"));
    }
  } catch (err) {
    console.error("Moderation API error:", err);
    alert("Could not connect to moderation server.");
  }
}

// Event Listeners for Mod Buttons
document.querySelector(".flag-btn")?.addEventListener("click", function() {
  const id = this.getAttribute("data-id");
  sendModerationAction(id, "flag");
});

document.querySelector(".delete-btn")?.addEventListener("click", function() {
  const id = this.getAttribute("data-id");
  if (confirm("WARNING: Are you sure you want to permanently delete this project?")) {
    sendModerationAction(id, "delete");
  }
});
</script>
