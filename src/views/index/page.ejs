<div class="hero">
    <h1>TeleWarp Projects</h1>
</div>

<div class="page">
    <% if (projects && projects.length > 0) { %>
        <div class="row"><h2>Recent</h2>
        <div class="projects-row">
            <% projects.forEach(p => { %>
                <a href="/projects/<%= p.id %>" class="project-card">
                    <% if (p.thumbnail) { %>
                        <img src="/api/asset?id=thumb_<%= p.id %>.png" alt="<%= p.name %>" class="project-thumb">
                    <% } else { %>
                        <img src="/images/default-thumbnail.png" alt="<%= p.name %>" class="project-thumb">
                    <% } %>
                    <div class="project-name"><%= p.name %></div>
                </a>
            <% }); %>
        </div>
        </div>
    <% } else { %>
        <p>No projects found.</p>
    <% } %>
</div>